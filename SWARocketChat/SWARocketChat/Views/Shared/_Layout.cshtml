<!doctype html>
<style>
    .footer {
        position: fixed;
        bottom: 0;
        height: 60px;
        width: 280px;
    }
</style>
<html lang="en">
@inject SignInManager<ApplicationUser> SignInManager
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - SWARocketChat</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/css/home.css" />
        <link rel="stylesheet" href="~/lib/bootstrap-4.0.0/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/lib/bootstrap-4.0.0/css/bootstrap-grid.min.css" />
        <link rel="stylesheet" href="~/lib/bootstrap-4.0.0/css/bootstrap-reboot.min.css" />
        @*<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.16/css/dataTables.bootstrap4.min.css" />*@
        <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css" />
        <link href="~/css/jquery-ui.min.css" rel="stylesheet" />
        <link href="~/css/jquery-ui.structure.min.css" rel="stylesheet" />
        <link href="~/css/jquery-ui.theme.min.css" rel="stylesheet" />
        <link href="~/css/select2.min.css" rel="stylesheet" />
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.9/css/all.css" integrity="sha384-5SOiIsAziJl6AWe0HWRKTXlfcSHKmYV4RBF18PPJ173Kzn7jzMyFuTtk8JA7QQG1" crossorigin="anonymous">
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/home.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.9/css/all.css" integrity="sha384-5SOiIsAziJl6AWe0HWRKTXlfcSHKmYV4RBF18PPJ173Kzn7jzMyFuTtk8JA7QQG1" crossorigin="anonymous">
    </environment>
    <script src="~/lib/jquery/dist/jquery-3.3.1.js"></script>
    <script src="~/js/popper.min.js" asp-append-version="true"></script>
    @*<script src="~/lib/bootstrap-4.1.1/js/bootstrap.bundle.js"></script>*@
    <script src="~/lib/bootstrap-4.0.0/js/bootstrap.min.js"></script>
    <script src="~/js/jquery-ui.min.js"></script>
    <script src="~/js/select2.min.js"></script>
    <script src="~/js/jquery.dataTables.min.js"></script>
    <script src="~/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body>
<nav class="navbar navbar-dark fixed-top bg-dark flex-md-nowrap p-0">
    <a class="navbar" asp-action="Index"asp-controller="Home" style="min-width: 280px">
        Bilder and Stuff
    </a>
    @*<span class="form-control form-control-dark w-100" style="box-shadow: 0 1px 2px 0 rgba(31,35,41,.08)">ControllerName</span>*@
    @if (IsSectionDefined("header"))
    {
        @RenderSection("header")
    }
    @if (!IsSectionDefined("header"))
    {
        <span class="form-control form-control-dark w-100" style="box-shadow: 0 1px 2px 0 rgba(31, 35, 41, .08)">
            ControllerName
        </span>
    }
</nav>
<div class="container-fluid">
    <div class="row">
        @if (IsSectionDefined("LeftNav"))
        {
            @RenderSection("LeftNav")
        }
        @if (!IsSectionDefined("LeftNav"))
        {
            <nav class="d-none d-md-block bg-dark sidebar"style="min-width: 280px">
                <div class="sidebar-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" asp-action="Index" asp-controller="Chatrooms">
                                <span data-feather="home"></span>
                                Chatrooms Index
                                <span class="sr-only">(current)</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <span data-feather="file"></span>
                                Orders
                            </a>
                        </li>
                    </ul>




                    <footer class="footer">
                        <a href="https://github.com/RocketChat/Rocket.Chat" target="_blank">
                            <img src="~/images/logo.svg?v=4" alt="" style="height: 46px; display: flex; margin: 0 auto"/>
                            <small style="position: absolute; bottom: 5px; right: 24px; color: lightgray">
                                <i class="fab fa-github"></i>
                                Fork it on github
                            </small>
                        </a>
                    </footer>
                </div>
            </nav>
        }


        <main role="main" id="main" class="main" style="padding-left: 40px; padding-right: 40px; margin-left: 280px; overflow-x: hidden; width: 100%;height: 100vh">
            @RenderBody()
        </main>
    </div>
</div>

<environment include="Development">
    <script src="~/lib/jquery/dist/jquery-3.3.1.js" asp-append-version="true"></script>
    <script src="~/js/popper.min.js" asp-append-version="true"></script>
    <script src="~/js/jquery.dataTables.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap-4.0.0/js/bootstrap.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</environment>
<environment exclude="Development">
    <script src="~/lib/jquery/dist/jquery-3.3.1.min.js" asp-append-version="true"></script>
    <script src="~/js/popper.min.js" asp-append-version="true"></script>
    <script src="~/js/jquery.dataTables.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap-4.0.0/js/bootstrap.min.js" asp-append-version="true"></script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>
</environment>

@RenderSection("Scripts", required: false)
</body>
</html>
