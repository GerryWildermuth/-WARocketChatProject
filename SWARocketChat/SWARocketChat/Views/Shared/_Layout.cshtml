<!doctype html>
<style>
    .footer {
        position: fixed;
        bottom: 0;
        height: 60px;
        width: 280px;
    }
    body > div > div > nav > div > ul > li > a > div > div:hover {
        transition: background-color 0.3s;
        background-color: #282c30;
    }
</style>
<html lang="en">
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<head>
    <link href="~/css/miniMenu.css" rel="stylesheet">
    <link href="~/css/tooltips.css" rel="stylesheet">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - SWARocketChat</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/css/home.min.css" />
        <link rel="stylesheet" href="~/lib/bootstrap-4.0.0/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/lib/bootstrap-4.0.0/css/bootstrap-grid.min.css" />
        <link rel="stylesheet" href="~/lib/bootstrap-4.0.0/css/bootstrap-reboot.min.css" />
        <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.16/css/dataTables.bootstrap4.min.css" />
        @*<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css" />*@
        <link href="~/css/jquery-ui.min.css" rel="stylesheet" />
        <link href="~/css/jquery-ui.structure.min.css" rel="stylesheet" />
        <link href="~/css/jquery-ui.theme.min.css" rel="stylesheet" />
        <link href="~/css/select2.min.css" rel="stylesheet" />
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.9/css/all.css" integrity="sha384-5SOiIsAziJl6AWe0HWRKTXlfcSHKmYV4RBF18PPJ173Kzn7jzMyFuTtk8JA7QQG1" crossorigin="anonymous">
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/home.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.9/css/all.css" integrity="sha384-5SOiIsAziJl6AWe0HWRKTXlfcSHKmYV4RBF18PPJ173Kzn7jzMyFuTtk8JA7QQG1" crossorigin="anonymous">
    </environment>
    <script src="~/lib/jquery/dist/jquery.js" asp-append-version="true"></script>
    <script src="~/js/popper.min.js" asp-append-version="true"></script>
    @*<script src="~/lib/bootstrap-4.1.1/js/bootstrap.bundle.js"></script>*@
    <script src="~/lib/bootstrap-4.0.0/js/bootstrap.min.js"></script>
    <script src="~/js/jquery-ui.min.js"></script>
    <script src="~/js/select2.min.js"></script>
    <script src="~/js/jquery.dataTables.min.js"></script>
    <script src="~/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

</head>
<body>
    <nav class="navbar navbar-dark fixed-top bg-dark flex-md-nowrap p-0">
        <ul class="flex-container" style="min-width: 280px;padding-left: 20px;">
            <li class="flex-item tooltips">
                <div class="user">
                    <i style="font-size: 24px;color: lightgray;" class="fas fa-user-circle"></i>
                    <ul>
                        <li><b>User</b></li>
                        <li><a style="font-size: 14px;" href="#"> <i class="fas fa-circle" style="color: #25FD06;"></i> online</a></li>
                        <li><a style="font-size: 14px;" href="#"> <i class="fas fa-circle" style="color: #F8EC0C;"></i> away</a></li>
                        <li><a style="font-size: 14px;" href="#"> <i class="fas fa-circle" style="color: red;"></i> busy</a></li>
                        <li><a style="font-size: 14px;" href="#"> <i class="fas fa-circle" style="color: lightgray;"></i> invisible</a></li>
                        <li><a class="far fa-user" asp-action="Index" asp-controller="Users" style="font-size: 14px;"> My Account</a></li>
                        <li><a class="fas fa-sign-out-alt" asp-action="Logout" asp-controller="Account" style="font-size: 14px;"> sign out</a></li>
                    </ul>
                </div>


            </li>
            <li class="flex-item tooltips">
                <i style="font-size:24px; color: lightgray;" class="fas fa-search"></i>
                <span class="tooltiptext">Search</span>
            </li>
            <li class="flex-item tooltips">
                <a asp-action="Index" asp-controller="Chatrooms" style="font-size:24px; text-decoration: none; color: lightgray" class="fas fa-globe"></a>
                <span class="tooltiptext">Directory</span>
            </li>
            <li class="flex-item tooltips">
                <i style="font-size:24px;color: lightgray;" class="fas fa-bars"></i>
                <span class="tooltiptext">View Mode</span>
            </li>
            <li class="flex-item tooltips">
                <i style="font-size:24px;color: lightgray;" class="fas fa-sort-alpha-down"></i>
                <span class="tooltiptext">Sort</span>
            </li>
            <li class="flex-item tooltips">
                <a asp-action="Create" asp-controller="Chatrooms" style="font-size:24px; text-decoration: none; color: lightgray" class="far fa-edit"></a>
                <span class="tooltiptext">Create a New Channel</span>
            </li>
        </ul>
        @*<span class="form-control form-control-dark w-100" style="box-shadow: 0 1px 2px 0 rgba(31,35,41,.08)">ControllerName</span>*@
        @if (IsSectionDefined("header"))
        {
            @RenderSection("header")
        }
        @if (!IsSectionDefined("header"))
        {
            <span class="form-control form-control-dark w-100" style="box-shadow: 0 1px 2px 0 rgba(31, 35, 41, .08)">
                ControllerName
            </span>
        }
    </nav>
    <div class="container-fluid">
        <div class="row">
            @if (IsSectionDefined("LeftNav"))
            {
                @RenderSection("LeftNav")
            }
            @if (!IsSectionDefined("LeftNav"))
            {
                <nav class="d-none d-md-block bg-dark sidebar" style="min-width: 280px">
                    <div class="sidebar-sticky">
                        <ul class="nav flex-column">
                            @*<li class="nav-item">
                                    <a class="nav-link active" asp-action="Index" asp-controller="Chatrooms">
                                        <span data-feather="home"></span>
                                        Chatrooms Index
                                        <span class="sr-only">(current)</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">
                                        <span data-feather="file"></span>
                                        Orders
                                    </a>
                                </li>*@
                            <li class="nav-item">
                                @{
                                    //var currentUser = await UserManager.GetUserAsync(User);
                                    if (ViewBag.UserRoomList != null)
                                    {
                                        ApplicationUser currentUser = ViewBag.UserRoomList;
                                        if (currentUser.UserRoomList != null)
                                        {
                                            if (currentUser.UserRoomList.Any(c => c.ChatroomStatus == 0))
                                            {
                                                <a class="nav-link" style="padding: 0;">
                                                    <div style="color: gray;">
                                                        <div style="padding-left:15px;">
                                                            Rooms
                                                        </div>
                                                        @foreach (var item in currentUser.UserRoomList)
                                                        {
                                                            var lastMessage = item.Chatroom.Messages.LastOrDefault();

                                                            <div style="color: white; font-family: -apple-system, BlinkMacSystemFont, Roboto, 'Helvetica Neue', Arial, sans-serif; cursor: pointer" onclick="location.href = '@Url.Action("Channel", "Chatrooms", new {id = item.ChatroomId})'">
                                                                <div style="padding:7px 20px; font-size: medium">
                                                                # @item.Chatroom.ChatroomName
                                                                @if (lastMessage != null)
                                                                {
                                                                    <div style="float: right; font-size: x-small">
                                                                        @lastMessage.MessageTime.ToString("dd/MM/yyyy")
                                                                    </div>
                                                                    <br/>
                                                                    <div style="font-size: small">
                                                                        @lastMessage.User.UserName: @lastMessage.MessageString
                                                                    </div>
                                                                }
                                                                </div>
                                                            </div>
                                                        }
                                                    </div>
                                                </a>
                                            }
                                        }
                                    }
                                }
                            </li>
                        </ul>
                        <footer class="footer">
                            <a href="https://github.com/RocketChat/Rocket.Chat" target="_blank">
                                <img src="~/images/logo.svg?v=4" alt="" style="height: 46px; display: flex; margin: 0 auto" />
                                <small style="position: absolute; bottom: 5px; right: 24px; color: lightgray">
                                    <i class="fab fa-github"></i>
                                    Fork it on github
                                </small>
                            </a>
                        </footer>
                    </div>
                </nav>
            }
            <main role="main" id="main" class="main" style="padding-left: 40px; padding-right: 40px; margin-left: 280px; margin-top: 15px; margin-bottom: -15px; overflow-x: hidden; width: 100%;height: 100vh">
                @RenderBody()
            </main>
        </div>
    </div>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js" asp-append-version="true"></script>
        <script src="~/js/popper.min.js" asp-append-version="true"></script>
        <script src="~/lib/bootstrap-4.0.0/js/bootstrap.js" asp-append-version="true"></script>
        <script src="~/js/jquery.dataTables.min.js" asp-append-version="true"></script>
        <script src="~/js/dataTables.bootstrap4.min.js"></script>
        @*<script src="~/js/jquery-ui.min.js"></script>*@
        <script src="~/js/select2.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @*<script src="~/js/WebSocketManager.js"></script>*@
        <script data-main="scripts/main" src="https://rawgit.com/radu-matei/websocket-manager/master/src/WebSocketManager.Client.TS/dist/WebSocketManager.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
        <script src="~/js/popper.min.js" asp-append-version="true"></script>
        <script src="~/js/jquery.dataTables.min.js" asp-append-version="true"></script>
        <script src="~/lib/bootstrap-4.0.0/js/bootstrap.min.js" asp-append-version="true"></script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
        @*<script src="~/js/WebSocketManager.js"></script>*@
        <script data-main="scripts/main" src="https://rawgit.com/radu-matei/websocket-manager/master/src/WebSocketManager.Client.TS/dist/WebSocketManager.js"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>